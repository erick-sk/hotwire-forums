<div class="flex justify-between items-center">
  <h1 class="text-4xl mb-4 font-bold">Notifications</h1>
  <%= button_to read_notifications_path, method: :post, class: "py-2 px-2 font-medium text-white bg-blue-500 rounded hover:bg-blue-400 transition duration-300" do %>
    Mark all as read
  <% end %>
</div>

<h3 class="text-3xl">What's new?</h3>
<% if @notifications.any? %>
  <%= render @notifications %>
<% else %>
  <div class="mb-3">No new notifications</div>
<% end %>

<% if @previous_notifications.any? %>
  <h4 class="text-2xl">Previously Seen</h4>
  <%= render partial: "notification", collection: @previous_notifications %>
<% end %>