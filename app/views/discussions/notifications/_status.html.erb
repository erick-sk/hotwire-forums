<h4 class="text-xl">Notifications</h4>

<p class="mb-2"><%= discussion.subscribed_reason(user) %></p>

<% if discussion.subscribe?(user) %>
  <%= button_to "Unsubscribe", root_path, class: "mb-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
<% else %>
  <%= button_to "Subscribe", root_path, class: "mb-4 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
<% end %>