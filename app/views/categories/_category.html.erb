<div id="<%= dom_id(category) %>", class="flex items-center justify-between">
  <h4 class="text-lg"><%= category.name %></h4>

  <% if category.discussions_count&.positive? %>
    <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800"><%= category.discussions_count %></span>
  <% end %>
</div>